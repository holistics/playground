Dashboard metric_table {
  title: 'Metric Table'
  description: ''''''

  view: CanvasLayout {
    label: 'View 1'
    height: 540
    grid_size: 20
    mobile {
      mode: 'auto'
    }
    block v1 {
      position: pos(20, 120, 1340, 400)
      layer: 1
    }
    block f1 {
      position: pos(280, 20, 300, 80)
      layer: 2
    }
    block t1 {
      position: pos(20, 20, 240, 80)
      layer: 3
    }
    width: 1380
  }

  theme: H.themes.classic
  block v1: VizBlock {
    label: 'Metric Table'
    viz: CustomChart {
      dataset: demo.ds_ecommerce
      calculation gmv_prev_month {
        label: 'GMV Prev Month'
        formula: @aql relative_period(
  gmv,
  demo.fct_orders.created_at,
  interval(-1 month)
);;
        calc_type: 'measure'
        data_type: 'number'
      }
      calculation aov_prev_month {
        label: 'AOV Prev Month'
        formula: @aql relative_period(
  aov,
  demo.fct_orders.created_at,
  interval(-1 month)
);;
        calc_type: 'measure'
        data_type: 'number'
      }
      calculation order_count_prev_month {
        label: 'Order Count Prev Month'
        formula: @aql relative_period(
  count_orders,
  demo.fct_orders.created_at,
  interval(-1 month)
);;
        calc_type: 'measure'
        data_type: 'number'
      }
      custom_chart_id: 1099511651282
      field date: VizFieldFull {
        ref: ref('demo.fct_orders', 'created_at')
        transformation: 'datetrunc day'
        format {
          type: 'date'
          pattern: 'LLL dd, yyyy'
        }
      }
      field metric1: VizFieldFull {
        ref: 'gmv'
        format {
          type: 'number'
          pattern: '[$$]#,###'
        }
      }
      field metric2: VizFieldFull {
        ref: 'aov'
        format {
          type: 'number'
          pattern: '[$$]#,###'
        }
      }
      field metric3: VizFieldFull {
        ref: 'count_orders'
        format {
          type: 'number'
          pattern: 'inherited'
        }
      }
      field metric1_prev: VizFieldFull {
        ref: 'gmv_prev_month'
        format {
          type: 'number'
          pattern: '[$$]#,###'
        }
      }
      field metric2_prev: VizFieldFull {
        ref: 'aov_prev_month'
        format {
          type: 'number'
          pattern: '[$$]#,###'
        }
      }
      field metric3_prev: VizFieldFull {
        ref: 'order_count_prev_month'
        format {
          type: 'number'
          pattern: 'inherited'
        }
      }
      setting width: 1200
      settings {
        row_limit: 5000
      }
    }
    settings {
      hide_label: true
    }
  }
  block f1: FilterBlock {
    label: 'Date Range'
    type: 'field'
    source: FieldFilterSource {
      dataset: demo.ds_ecommerce
      field: ref('demo.fct_orders', 'created_at')
    }
    default {
      operator: 'matches'
      value: '2025-01-01 - 2025-01-13'
    }
  }
  block t1: TextBlock {
    content: @md # Metric Table;;
  }
}