  block v3: VizBlock {
    label: 'List of Three Metrics'
    viz: CustomChart {
      dataset: demo.ds_ecommerce
      custom_chart_id: 1099511649197
      field m1: VizFieldFull {
        ref: 'gmv'
        format {
          type: 'number'
          pattern: 'inherited'
        }
      }
      field m2: VizFieldFull {
        ref: 'aov'
        format {
          type: 'number'
          pattern: 'inherited'
        }
      }
      field m3: VizFieldFull {
        ref: 'count_orders'
        format {
          type: 'number'
          pattern: 'inherited'
        }
      }
      setting value_color: '#53586A'
      setting label_color: '#53586A'
      setting value_size: 48
      setting label_size: 20
      settings {
        row_limit: 5000
      }
    }
    settings {
      hide_label: true
    }
  }
